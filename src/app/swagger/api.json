{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Pingr-- API",
    "description": "Pingr-- API Documentation"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/accounts": {
      "post": {
        "summary": "Create a new account",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "username",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  },
                  "name": {
                    "type": "string"
                  },
                  "bio": {
                    "type": "string"
                  },
                  "birthDate": {
                    "type": "string",
                    "format": "date"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created - Account Id"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/accounts/{id}": {
      "get": {
        "summary": "Get account by Id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK - Account"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/accounts/{id}/auth": {
      "get": {
        "summary": "Check if an account is logged",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK - Boolean"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "Log in specific account",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "password"
                ],
                "properties": {
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK - Session Id"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/accounts/{id}/logout": {
      "post": {
        "summary": "Logout a specific account with a specific session",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "session"
                ],
                "properties": {
                  "session": {
                    "type": "string",
                    "format": "session"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/{sessionId}": {
      "get": {
        "summary": "Validate and get session information",
        "parameters": [
          {
            "in": "path",
            "name": "sessionId",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK - Account Id associated with the session"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/profiles": {
      "get": {
        "summary": "Get profiles",
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "type": "string"
          },
          {
            "in": "query",
            "name": "username",
            "type": "string"
          },
          {
            "in": "query",
            "name": "bio",
            "type": "string"
          },
          {
            "in": "query",
            "name": "name",
            "type": "string"
          },
          {
            "in": "query",
            "name": "birthDate",
            "type": "date"
          }
        ],
        "responses": {
          "200": {
            "description": "OK - Array of Profiles"
          }
        }
      }
    },
    "/posts": {
      "get": {
        "summary": "Get posts",
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "type": "string"
          },
          {
            "in": "query",
            "name": "profileId",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK - Array of posts"
          }
        }
      },
      "post": {
        "summary": "Create new post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "accountId",
                  "text"
                ],
                "properties": {
                  "accountId": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created - Post Id"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/posts/{id}": {
      "delete": {
        "summary": "Delete a post",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted - Post Id"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/posts/{id}/like": {
      "put": {
        "summary": "Like a post",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "accountId"
                ],
                "properties": {
                  "accountId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created - Post Id"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/posts/{id}/share": {
      "put": {
        "summary": "Share a post",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "accountId",
                  "text",
                  "sharedPostId"
                ],
                "properties": {
                  "accountId": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created - Post Id"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/posts/{id}/reply": {
      "put": {
        "summary": "Reply to a post",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "accountId",
                  "text",
                  "sharedPostId"
                ],
                "properties": {
                  "accountId": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created - Post Id"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}