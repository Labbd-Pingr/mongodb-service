{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Pingr-- API",
    "description": "Pingr-- API Documentation"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/profiles": {
      "get": {
        "summary": "Get profiles",
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "type": "string"
          },
          {
            "in": "query",
            "name": "username",
            "type": "string"
          },
          {
            "in": "query",
            "name": "bio",
            "type": "string"
          },
          {
            "in": "query",
            "name": "name",
            "type": "string"
          },
          {
            "in": "query",
            "name": "birthDate",
            "type": "date"
          }
        ],
        "responses": {
          "200": {
            "description": "OK - Array of Profiles"
          }
        }
      }
    },
    "/posts": {
      "get": {
        "summary": "Get posts",
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "type": "string"
          },
          {
            "in": "query",
            "name": "profileId",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK - Array of posts"
          }
        }
      },
      "post": {
        "summary": "Create new post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {}
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {},
      "delete": {}
    },
    "/chats": {
      "post": {
        "summary": "Create new chat",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "accountIds"
                ],
                "properties": {
                  "accountIds": {
                    "type": "array",
                    "items": ["accountId1", "accountId2"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK - Created"
          }
        }
      }
    },
    "/chats/{id}": {
      "get":{
        "summary": "Get Chat By Id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string"
          }],
          "responses": {
            "200": {
              "description": "OK - Chat"
            }
        }
      },
      "post":{
        "summary": "Send Message",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string"
          }],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "senderId",
                    "text"
                  ],
                  "properties": {
                    "senderId": {
                      "type": "string"
                    },
                    "text": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK - Chat"
            }
        }
      },
      "put":{
        "summary": "Add User"
      }
    },
    "/groups": {},
    "/groups/{id}": {}
  }
}